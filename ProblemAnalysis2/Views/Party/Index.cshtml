@model IEnumerable<ProblemAnalysis2.Models.Party>

<h2 class="mt-4 mb-4 text-center">All Parties</h2>

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-success" asp-action="Create">+ Create New Party</a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Location</th>
            <th class="text-center"># of Invites</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.Location</td>
                <td class="text-center">@item.Invitations?.Count()</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm rounded-pill me-2">Edit</a>
                    <a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-pill">Manage</a>
                </td>
            </tr>
        }
    </tbody>
</table>
